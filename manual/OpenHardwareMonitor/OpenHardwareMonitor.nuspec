    <packageSourceUrl>https://github.com/dtgm/chocolatey-packages/tree/master/automatic/openhardwaremonitor/</packageSourceUrl>
    <docsUrl>http://openhardwaremonitor.org/documentation/</docsUrl>
  </metadata>
